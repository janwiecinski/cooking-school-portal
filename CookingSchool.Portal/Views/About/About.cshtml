
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contact with Us</h2>

<div class="col-md-6">
    <div>
        @if (ViewBag.Message == null)
            {
            <div>
                <form method="post">
                    <div class="form-group">
                        <label >Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name"
                              class="text-muted"></span>
                    </div>
                    <div class="form-group">
                        <label >Email</label>
                        <input id="emailId" class="form-control" />
                        <span asp-validation-for="Email"
                              class="text-muted"></span>
                    </div>
                    <div class="form-group">
                        <label >Subject</label>
                        <input id="subjectId" class="form-control" />
                        <span asp-validation-for="Subject"
                              class="text-muted"></span>
                    </div>
                    <div class="form-group">
                        <label >Message</label>
                        <textarea rows="5" cols="15"
                                  id="messageId" class="form-control"></textarea>
                        <span asp-validation-for="Message"
                              class="text-muted"></span>
                    </div>
                    <div>
                        <button type="submit"
                                class="btn btn-success">
                            Send
                        </button>
                    </div>

                </form>
            </div>
        }
    </div>
</div>
<div class="col-md-6">
    <div id="map"></div>
</div>
<script>
      function initMap() {
        var uluru = {lat: -25.363, lng: 131.044};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 4,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAHxP8KePUqqLnHApJrhUa8GIwAYnD_5lE&callback=initMap">
</script>